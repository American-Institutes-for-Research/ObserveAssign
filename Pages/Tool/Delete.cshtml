@page
@model ObserveAssign.Pages.Tool.DeleteModel
@{
    ViewData["Title"] = "Delete Tool";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Delete Tool</h1>

<h3>Are you sure you want to delete this tool?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToolModel.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToolModel.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="ToolModel.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-outline-dark">Cancel</a>
    </form>
</div>