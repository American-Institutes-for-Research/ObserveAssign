@page
@model ObserveAssign.Pages.User.DeleteModel

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete User</h1>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserModel.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserModel.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserModel.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserModel.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserModel.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserModel.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserModel.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserModel.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserModel.EmailConfirmed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserModel.EmailConfirmed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserModel.LockoutEnabled)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserModel.LockoutEnabled)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="UserModel.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-page="./Index" class="btn btn-outline-dark">Cancel</a>
    </form>
</div>
