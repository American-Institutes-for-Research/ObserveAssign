@page
@model ObserveAssign.Pages.School.EditModel
@{
    ViewData["Title"] = "Edit School";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit School</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SchoolModel.ID" />
            <input type="hidden" asp-for="SchoolModel.CreatedDate" />
            <input type="hidden" asp-for="SchoolModel.CreatedBy" />
            <div class="form-group row">
                <label asp-for="SchoolModel.ID" class="control-label col"></label>
                <input asp-for="SchoolModel.ID" class="form-control col" />
                <span asp-validation-for="SchoolModel.ID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="SchoolModel.Name" class="control-label col"></label>
                <input asp-for="SchoolModel.Name" class="form-control col" />
                <span asp-validation-for="SchoolModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="SchoolModel.ProjectId" class="control-label col"></label>
                <select asp-for="SchoolModel.ProjectId" asp-items="@Model.Projects" class="form-control col">
                    <option value="-1">-- Please Select --</option>
                </select>
            </div>
            <div class="form-group form-check row">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SchoolModel.IsArchived" /> @Html.DisplayNameFor(model => model.SchoolModel.IsArchived)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-outline-dark">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
