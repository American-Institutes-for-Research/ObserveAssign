@page
@model ObserveAssign.Pages.School.DeleteModel
@{
    ViewData["Title"] = "Delete School";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Delete School</h1>

<h3>Are you sure you want to delete this school?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolModel.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolModel.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="SchoolModel.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-outline-dark">Cancel</a>
    </form>
</div>