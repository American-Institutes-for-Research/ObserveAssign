@page
@model ObserveAssign.Pages.Project.DeleteModel
@{
    ViewData["Title"] = "Delete Project";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Delete Project</h1>

<h3>Are you sure you want to delete this project?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectModel.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectModel.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="ProjectModel.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-outline-dark">Cancel</a>
    </form>
</div>